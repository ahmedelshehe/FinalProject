@using FinalProject.Utilities;
@model FinalProject.ViewModels.SettingViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4> General Setting</h4>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Save" method="post">
                <div class="row">

                    <div class="col-lg-4 col-sm-6 col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Extra" class="control-label"></label>
                            <input asp-for="Extra" class="form-control" />
                            <span asp-validation-for="Extra" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Discount" class="control-label"></label>
                            <input asp-for="Discount" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-8 col-sm-6 col-12">
                        <div class="form-group">

                        <p>
                            Week Holiday
                        </p>
                        @for (int i = 0; i < Model.DayChecked.Count; i++)
                        {
                            <label class="list-group-item text-black">
                                <input class="form-check-input me-1" type="hidden" asp-for="@Model.DayChecked[i].Day" />
                                <input class="form-check-input me-1" asp-for="@Model.DayChecked[i].Checked" />
                                @Model.DayChecked[i].Day
                            </label>
                        }
                            <div class="form-group">
                            </div>


                    <div class="col-lg-12">
                        <div class="form-group">



                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn " style="color: #fff;
    background-color: #637381;
    border-color: #637381">Cancel</a>


                        </div>

                    </div>
                </div>

            </form>

        </div>

    </div>
</div>
