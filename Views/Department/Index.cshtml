@model IEnumerable<FinalProject.Models.Department>
@using FinalProject.Utilities
@{
    ViewData["Title"] = "Departments";
    var permissions = Context.Items["Permissions"] as List<Permission>;
    var canShowDepartments = permissions.HasPermission("Department", Operation.Show);
    var canAddDepartments = permissions.HasPermission("Department", Operation.Add);
    var canUpdateDepartments = permissions.HasPermission("Department", Operation.Update);
    var canDeleteDepartments = permissions.HasPermission("Department", Operation.Delete);
    string actionsFlag = new List<string>() { canUpdateDepartments, canShowDepartments, canDeleteDepartments }.Any(e => e == "") ? "" : "hidden";

}

<div class="row align-items-center align-content-between welcome-box m-5">
    <div class="col-11">
        <h1>Departments</h1>
    </div>
    <div class="col print-off" @(canAddDepartments)>
        <a asp-action="Create"><i class="fa-sharp fa-solid fa-plus fa-2xl"></i></a>
    </div>
</div>
<div class="row align-items-start align-content-between m-5">
    <div class="card p-3 shadow col-10 ml-5">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th colspan="3" class="print-off" @(actionsFlag)>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="print-off" @(canUpdateDepartments)>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                    </a>
                </td>
                <td class="print-off" @(canShowDepartments)>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-l" style="color: #000000;"></i></a>
                </td>
                <td class="print-off" @(canDeleteDepartments)>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash fa-l" style="color: #000000;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
    <div class="col print-off">
        <a onclick="printContent('print-layout')" style="cursor:pointer;"><i class="fa-solid fa-print fa-2xl" style="color: #00276b;"></i></a>
    </div>
</div>