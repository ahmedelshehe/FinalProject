@model FinalProject.Models.Department

@{
    ViewData["Title"] = "Edit";
}

        
<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Edit Department</h4>
        </div>

    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label" style="font-size: 20px;"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-lg-12">
                        <input type="submit" value="Edit" class="btn btn-submit me-2" />
                        <a asp-controller="Department" asp-action="Index" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
