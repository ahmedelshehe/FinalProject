@model FinalProject.Models.OfficialVacation
@{
    var permissions = Context.Items["Permissions"] as List<Permission>;
    var canUpdateOfficialVacation = false;
    bool havePermissions = permissions == null ? false : true;
    if (havePermissions)
    {
        canUpdateOfficialVacation = permissions.Any(p => p.Name == "OfficialVacation" && p.Operation == Operation.Update);
    }
}


<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Official Vacation Details</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-body">

                    <div class="productdetails">
                        <ul class="product-bar">
                            <li>
                                <h4>@Html.DisplayNameFor(model => model.Title)</h4>
                                <h6>@Html.DisplayFor(model => model.Title)	</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Date)

                                </h4>
                                <h6>@Html.DisplayFor(model => model.Date)</h6>
                            </li>
                         
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="form-group">
            <span @(canUpdateOfficialVacation ? "" : "hidden")>
                <a asp-action="Edit" class="btn " style="color: #fff;
    background-color: #FF9F43;
    border-color: #FF9F43" asp-route-id="@Model?.Id">Edit</a>
            </span>
            <a asp-action="Index" class="btn " style="color: #fff;
    background-color: #637381;
    border-color: #637381">Cancel</a>


        </div>
    </div>
</div>