@model FinalProject.Models.Employee
@using FinalProject.Utilities;
@{
    ViewData["Title"] = "Details";
}
@{
    var permissions = Context.Items["Permissions"] as List<Permission>;
  
    var canUpdateEmployee = permissions.HasPermission("Employee", Operation.Update);
  
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Employee Details</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-body">
                
                    <div class="productdetails">
                        <ul class="product-bar">
                            <li>
                                <h4>@Html.DisplayNameFor(model => model.FirstName)</h4>
                                <h6>@Html.DisplayFor(model => model.FirstName)	</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.LastName)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.LastName)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Street)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.Street)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.City)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.City)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Country)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.Country)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Gender)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.Gender)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.BirthDate)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.BirthDate)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.ContractDate)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.ContractDate)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Email)
                                    
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.Email)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.NationalId)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.NationalId)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Salary)
                                    
                                </h4>
                                <h6>@Html.DisplayFor(model => model.Salary)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.PhoneNumber)

                                </h4>
                                <h6>@Html.DisplayFor(model => model.PhoneNumber)</h6>
                            </li>
                            <li>
                                <h4>
                                    @Html.DisplayNameFor(model => model.Department)
                                </h4>
                                <h6>
                                    @Html.DisplayFor(model => model.Department.Name)
                                </h6>
                            </li>
                           
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="col-lg-12">
        <div class="form-group">
            <span @(canUpdateEmployee)>
                <a asp-action="Edit" class="btn " style="color: #fff;
    background-color: #FF9F43;
    border-color: #FF9F43" asp-route-id="@Model?.Id">Edit</a></span>
                <a asp-action="Index" class="btn " style="color: #fff;
    background-color: #637381;
    border-color: #637381">Cancel</a>


</div>
</div>
</div>