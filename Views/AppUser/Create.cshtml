@model AppUser

@{
    ViewData["Title"] = "Create User";
    SelectList AllEmps = new SelectList(ViewBag.Emps, "Id", "FirstName");
}

<h1>Create User</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Employee.Password">Password</label>
        <input asp-for="Employee.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <select asp-for="EmpId" class="form-control" asp-items="AllEmps">
            <option value="" selected disabled hidden>Choose a Employee</option>
        </select>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
</form>
