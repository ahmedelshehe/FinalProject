@model IEnumerable<AppUser>
@using FinalProject.Utilities

@{
    ViewData["Title"] = "Users";
    var permissions = Context.Items["Permissions"] as List<Permission>;
    var canShowUser = permissions.HasPermission("AppUser", Operation.Show);
    var canAddUser = permissions.HasPermission("AppUser", Operation.Add);
    var canUpdateUser = permissions.HasPermission("AppUser", Operation.Update);
    var canDeleteUser = permissions.HasPermission("AppUser", Operation.Delete);
    string actionsFlag = new List<string>(){canUpdateUser,canDeleteUser,canShowUser}.Any(e=> e == "") ? "" : "hidden";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Users list</h4>
        </div>
        <div class="page-btn" @(canAddUser)>
            <a asp-action="Create" class="btn btn-added">
                <img src="~/img/icons/plus.svg" class="me-1" alt="img">Add User
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-top">
                <div class="search-set">
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <img src="~/img/icons/filter.svg" alt="img">
                            <span><img src="~/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="search-input">
                        <a class="btn btn-searchset"><img src="~/img/icons/search-white.svg" alt="img"></a>
                    </div>
                </div>
                <div class="wordset">
                    <ul>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img src="~/img/icons/pdf.svg" alt="img"></a>
                        </li>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img src="~/img/icons/excel.svg" alt="img"></a>
                        </li>
                        <li>
                            <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img src="~/img/icons/printer.svg" alt="img"></a>
                        </li>
                    </ul>
                </div>
            </div>



            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Username</th>
                            <th>Email</th>
                            <td>Role</td>
                            <th></th>
                            <th>Action</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>


                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                @if(item.Role == null)
                                {
                                    <td>-</td>
                                }
                                else
                                {
                                    <td>@item.Role.Name</td>

                                }
                                <td @(canShowUser)>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="me-3">
                                        <img src="~/img/icons/file.png" width="30px" alt="img">
                                    </a>
                                </td>
                                <td @(canUpdateUser)>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="me-3">
                                        <img src="~/img/icons/pencil.png" width="30px" alt="img">
                                    </a>
                                </td>
                                <td @(canDeleteUser)>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="me-3 confirm-text">
                                        <img src="~/img/icons/delete.png" width="30px" alt="img">
                                    </a>
                                </td>


                            </tr>

                        }
                    </tbody>
                    <tfoot>
                        @if (@Model.Count() >= 0)
                        {
                            <div class="col-lg-3 col-sm-6 col-12 d-flex" style="margin:0 auto">
                                <div class="dash-count das2">
                                    <div class="dash-counts">
                                        <h4>@Model.Count()</h4>
                                        <h5>Users</h5>
                                    </div>
                                    <div class="dash-imgs">
                                        <i data-feather="user"></i>
                                    </div>
                                </div>
                            </div>

                        }
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>



