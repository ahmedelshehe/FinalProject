@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Password
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Password)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AppId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.AppId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AppId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
