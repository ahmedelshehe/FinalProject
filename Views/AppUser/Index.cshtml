@model IEnumerable<AppUser>
@using FinalProject.Utilities

@{
    ViewData["Title"] = "Users";
    var permissions = Context.Items["Permissions"] as List<Permission>;
    var canShowUser = permissions.HasPermission("AppUser", Operation.Show);
    var canAddUser = permissions.HasPermission("AppUser", Operation.Add);
    var canUpdateUser = permissions.HasPermission("AppUser", Operation.Update);
    var canDeleteUser = permissions.HasPermission("AppUser", Operation.Delete);
    string actionsFlag = new List<string>(){canUpdateUser,canDeleteUser,canShowUser}.Any(e=> e == "") ? "" : "hidden";
}
<div class="row align-items-center align-content-between welcome-box m-5" >
    <div class="col-11">
        <h1>Users</h1>
    </div>
    <div class="col print-off" @(canAddUser) >
        <a asp-action="Create"><i class="fa-sharp fa-solid fa-plus fa-2xl"></i></a>
    </div>
</div>
<div class="row align-items-start align-content-between">
    <div class="card p-3 shadow col-10 ml-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Role
                    </th>
                    <th colspan="3" class="print-off" @(actionsFlag)>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        @if(item.Role == null){
                            <td>-</td>
                        }else{
                            <td>@Html.DisplayFor(model => item.Role.Name)</td>

                        }
                        <td class="print-off" @(canUpdateUser)>
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                            </a>
                        </td>
                        <td class="print-off" @(canShowUser)>
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-l" style="color: #000000;"></i></a>
                        </td>
                        <td class="print-off" @(canDeleteUser)>
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash fa-l" style="color: #000000;"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col print-off">
        <a onclick="printContent('print-layout')" style="cursor:pointer;"><i class="fa-solid fa-print fa-2xl" style="color: #00276b;"></i></a>
    </div>
</div>
