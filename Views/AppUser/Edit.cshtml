@model AppUser

@{
    SelectList AllRoles = new SelectList(ViewBag.AllRules, "Id", "Name");
    ViewData["Title"] = "Edit User";
}


<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Edit User</h4>
        </div>

    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label" style="font-size: 20px;"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label" style="font-size: 20px;"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="Role.Name" class="control-label"></label>

                            <div class="select-wrapper">
                                <select asp-for="RoleAppId" class="form-control select2-hidden-accessible" tabindex="-1" aria-hidden="true" asp-items="AllRoles">
                                    <option value="" selected disabled hidden>Choose a Role</option>

                                </select>
                                <div class="arrow"></div>
                            </div>

                        </div>
                    </div>




                    <div class="col-lg-12">
                        <input type="submit" value="Edit" class="btn btn-submit me-2" />
                        <a asp-controller="AppUser" asp-action="Index" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
