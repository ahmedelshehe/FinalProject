@model AppUser

@{
    SelectList AllRoles = new SelectList(ViewBag.AllRules, "Id", "Name");
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role.Name" class="control-label"></label>
        <select asp-for="RoleAppId" class="form-control" asp-items="AllRoles">
            <option value="" selected disabled hidden>Choose a Role</option>
        </select>
    </div>
    
    <input type="submit" value="Save" class="btn btn-primary" />
</form>
