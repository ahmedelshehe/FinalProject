@model FinalProject.Models.Attendance
@using FinalProject.Utilities;
@{
    ViewData["Title"] = "Details";
}
@{
    var permissions = Context.Items["Permissions"] as List<Permission>;

    var canUpdateAttendence = permissions.HasPermission("Attendances", Operation.Update);
   
}
<h1>Details</h1>

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
    </dl>
</div>
<div>
    <p @(canUpdateAttendence )> @Html.ActionLink("Edit", "Edit", new { id=Model.EmployeeId , date=Model.Date }) |</p>
    <a asp-action="Index">Back to List</a>
</div>
