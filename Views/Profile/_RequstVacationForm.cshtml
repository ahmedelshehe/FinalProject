@using FinalProject.Models
@using FinalProject.RepoServices
@model Vacation
@inject IVacationRepository VacationRepo

@{
    ViewData["Title"] = "Create";
}
<div class="page-header">
    <div class="page-title text-center">
        <h4>Request a vacation</h4>
    </div>
</div>
<form asp-action="Create" asp-controller="Vacation">
    <div class="card">
        <div class="card-body">
            <div class="row">

                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Start Date</label>
                        <input name="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>End Date</label>
                        <input name="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Type</label>
                        <select asp-for="VacationType" asp-items="@Html.GetEnumSelectList<VacationTypes>()" class="form-control">
                            <option value="" disabled selected>Choose A Type</option>
                        </select>
                        <span asp-validation-for="VacationType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Request" class="btn btn-primary" />
                    <a asp-action="Index" type="submit" class="btn btn-dark">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}