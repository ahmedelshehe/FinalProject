<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Roles List</h4>
        </div>
        <div class="page-btn" @(canAddRole)>
            <a asp-action="Create" class="btn btn-added"><img src="~/assets/img/icons/plus.svg" alt="img" class="me-1">Add New Role</a>
        </div>
    </div>


    <div class="card">
        <div class="card-body">

            <div id="my-table-div">
                <table id="mytable" class=" table hover row-border compact stripe order-column" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)

                                </td>
                                

                                <td class="print-off">
                                    <div class="action-links">
                                        <span @(canUpdateRole)>
                                            <a asp-action="Edit" class="me-3" asp-route-id="@item.Id">
                                                <img src="~/assets/img/icons/edit.svg" alt="Edit">
                                            </a>
                                        </span>
                                        <span @(canShowRole)>
                                            <a asp-action="Details" class="me-3" asp-route-id="@item.Id">
                                                <img src="~/assets/img/icons/eye.svg" />
                                            </a>
                                        </span>
                                        <span @(canDeleteRole)>
                                            <a asp-action="Delete" class="me-3" asp-route-id="@item.Id" class="confirm-text">
                                                <img src="~/assets/img/icons/delete.svg" alt="Delete">
                                            </a>
                                        </span>
                                    </div>
                                </td>


                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
