@model IEnumerable<AppRole>

<h1>Roles</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
        <tr>

        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                 
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                    
                    <a asp-action="Details" asp-route-id="@role.Id">View Permissions</a>
                    
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                
                </td>
            </tr>
            
        }
    </tbody>
</table>
