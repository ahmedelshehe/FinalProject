@model IEnumerable<Vacation>

@{
    ViewData["Title"] = "Index";
}
<h1>My Vacations Requests</h1>

<h4>Available Vacations: @ViewBag.AvailableVacations</h4>

@if (ViewBag.AvailableVacations > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vacation in Model)
            {
                <tr>
                    <td>@vacation.Employee.FirstName</td>
                    <td>@vacation.StartDate</td>
                    <td>@vacation.EndDate</td>
                    <td>@vacation.Status</td>
                    <td>@vacation.Description</td>
                  
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        <p>No vacations are available for you.</p>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vacation in Model)
            {
                <tr>
                    <td>@vacation.Employee.FirstName</td>
                    <td>@vacation.StartDate</td>
                    <td>@vacation.EndDate</td>
                    <td>@vacation.Status</td>
                    <td>@vacation.Description</td>
                    
                    
                </tr>
            }
        </tbody>
    </table>
}