@model IEnumerable<Vacation>

@{
    ViewData["Title"] = "Index";
}

<h1>Vacation Requests</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Number of Days</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacation in Model)
        {
            <tr>
                <td>@vacation.Employee.FirstName</td>
                <td>@vacation.StartDate</td>
                <td>@vacation.EndDate</td>
                <td>@vacation.Status</td>
                <td>
                    @vacation.VacationDays
                </td>
                <td>
                    <a href="@Url.Action("Details", "Vacation", new { id = vacation.EmployeeId })" class="btn btn-primary">Details</a>
                    @if (vacation.Status == VacationStatus.Pending)
                    {
                        <a href="@Url.Action("Approve", "Vacation", new { id = vacation.EmployeeId , date = vacation.StartDate })" class="btn btn-success">Approve</a>
                        <a href="@Url.Action("Reject", "Vacation", new { id = vacation.EmployeeId , date = vacation.StartDate})" class="btn btn-danger">Reject</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
