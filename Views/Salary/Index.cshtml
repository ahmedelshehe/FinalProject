@using FinalProject.Utilities;
@model IEnumerable<FinalProject.ViewModels.SalaryViewModel>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Fluent
@using X.PagedList.Web.Common;
﻿@{
    var pagedList = (IPagedList)Model;
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    var permissions = Context.Items["Permissions"] as List<Permission>;
    var canShowSalary = permissions.HasPermission("Salary", Operation.Show);
    SelectList empList = new SelectList(ViewBag.Employees, "Id", "FirstName");
}


@if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
{
    <div class="alert alert-warning">
        @ViewBag.AlertMessage
    </div>
}



<!-- Rest of your HTML and table display code -->

<form action="/Salary/Index" method="get">
    <select name="empId" class="form-control" @(canShowSalary)>
        <option value="" selected disabled hidden>Choose an Employee</option>
        @foreach (var item in ViewBag.Employees)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <br />
    <select name="year" id="year" class="form-control" required>
        <option value="" selected disabled hidden>Choose an Year</option>
        @foreach (var item in ViewBag.Year)
        {
            <option value="@item">@item</option>
        }
    </select>
    <br />
    <select name="month" id="month" class="form-control">
        <option value="" selected disabled hidden>Choose an Month</option>
        @foreach (var item in ViewBag.months)
        {
            <option value="@item">@item</option>
        }
    </select>
    <br />
    <button type="submit">Search</button>
</form>

<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <i class="fa fa-briefcase"></i> Department
            </th>
            <th>
                <i class="fa fa-user"></i> Full Name
            </th>
            <th>
                <i class="fa fa-money"></i> Salary
            </th>
            <th>
                <i class="fa fa-money"></i> Total Salary
            </th>
            <th>
                <i class="fa fa-venus-mars"></i> Discount Hour
            </th>
            <th>
                <i class="fa fa-calendar"></i> Discount Hour Price
            </th>
            <th>
                <i class="fa fa-calendar"></i> Extra Time
            </th>
            <th>
                <i class="fa fa-calendar"></i> Extra Time Price
            </th>
            <th>
                <i class="fa fa-calendar"></i> Attandance Day
            </th>
            <th>
                <i class="fa fa-calendar"></i> Absance Day
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisccountHoursPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtraHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtraHoursPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfAttandanceDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfAbsanceDays)
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="container" style="margin-left: 20px">
    <div class="pagination" style="margin-left: 400px">
        @Html.PagedListPager(pagedList, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions
        {
        DisplayLinkToIndividualPages = true,
        DisplayPageCountAndCurrentLocation = false,
        MaximumPageNumbersToDisplay = 10,
        UlElementClasses = new string[] { "pagination justify-content-end" },
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        })
    </div>
</div>
